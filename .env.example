# .env.example

# Database
DATABASE_URL = postgresql+asyncpg://user:password@localhost:5432/furniture_db

# Supabase configuration
SUPABASE_URL = https://my-project.supabase.co
SUPABASE_ANON_KEY = my-anon-key
SUPABASE_SERVICE_ROLE_KEY = your-service-role-key
SUPABASE_JWKS_URL = https://my-project.supabase.co/auth/v1/jwks
SUPABASE_STORAGE_BUCKET = furniture-images


# Admin Authentication
# The JWT claim name to check for admin status (e.g., 'role', 'app_metadata.is_admin')
ADMIN_ROLE_CLAIM = role

# The expected value for admin users (e.g., 'admin', 'administrator', 'true'
ADMIN_ROLE_VALUE= admin

# JWT configuration
# The claim containing the user ID (usually 'sub' or 'user_id')
JWT_USER_ID_CLAIM = sub

# API Configuration
DEFAULT_LIMIT - 12
